# Stripe
STRIPE_SECRET_KEY=sk_test_your_key_here
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_key_here

# Server URL
NEXT_PUBLIC_SERVER_URL=http://localhost:3001

# MongoDB
MONGO_DB=mongodb+srv://username:password@cluster.mongodb.net/database

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_HASHED_PASSWORD=your_hashed_password_here

# Email configuration
# Public-facing email displayed on footer, about, imprint, etc.
NEXT_PUBLIC_ADMINEMAIL=info@example.com 

# For order notifications
SHOP_EMAIL=shop@example.com 

# Verified sender email address for Resend to send emails 
SENDER_EMAIL=shop@example.com

# Resend API key
RESEND_API_KEY=your_resend_api_key_here

# Vercel Blob (for image uploads)
# Get your token from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_your_token_here
